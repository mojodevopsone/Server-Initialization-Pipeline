pipeline {
    agent any
    stages {
        stage('Git') {
            steps {
                git credentialsId: 'jenkins-sshkey', branch: 'main', url: 'git@github.com:mojodevopsone/ansible-inventory-test.git'
            }
        }

        stage('Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbook.yml', inventory: 'inventory.ini'
                )
            }
        }
    }
}
